{
    "configurations": [
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "nodemon",
            "program": "${workspaceFolder}/src/index.js",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
    ]
}